# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# Auhtentification route
# POST    /api/auth                   primary_adapters.controllers.AuthController.connect()

# CRUD for TodoEntity
POST    /api/todos                  primary_adapters.rest.controllers.TodosController.createOne()
GET     /api/todos                  primary_adapters.rest.controllers.TodosController.getAll(tags: Option[List[String]], user: Option[String])
GET     /api/todos/:id              primary_adapters.rest.controllers.TodosController.getById(id)
PUT     /api/todos                  primary_adapters.rest.controllers.TodosController.modifyOne()
DELETE  /api/todos/:id              primary_adapters.rest.controllers.TodosController.deleteOne(id)

POST    /api/users                  primary_adapters.rest.controllers.UsersController.createOne()
GET     /api/users                  primary_adapters.rest.controllers.UsersController.getAll()
GET     /api/users/:id              primary_adapters.rest.controllers.UsersController.getById(id)


